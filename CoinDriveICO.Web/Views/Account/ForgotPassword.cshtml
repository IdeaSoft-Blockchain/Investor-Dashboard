@model CoinDriveICO.Web.Models.ForgotPasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Forgot password";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/styles/style.css">
    <title>Login</title>
</head>
<body>
<div class="wrapper">
    <div class="auth-logo">
        <a href="index.html">
            <img src="~/images/Logo.svg" alt="">
        </a>
    </div>
    <div class="auth-block">
        <form id="resetForm" class="loginForm form" asp-action="ForgotPassword" asp-controller="Account">
            <div class="email">
                <label class="custom" asp-for="Email">Email address</label>
                <input name="email" type="text" asp-for="Email" required >
            </div>
            <div class="login-add">			
            </div>
            <button type="submit" class="btn-deafault" >Reset</button>
            <div id="to-login-link" class="popup-link">
                <a asp-action="Login" asp-controller="Account">Back to Login ></a>
            </div>
        </form>
    </div>
</div>
<script src="~/js/jquery-3.2.1.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/js/reset.js"></script>
</body>
</html>